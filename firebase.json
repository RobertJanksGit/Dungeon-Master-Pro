{
  "hosting": {
    "public": "dist",
    "ignore": ["firebase.json", "**/.*", "**/node_modules/**"],
    "rewrite": [{ "source": "**", "destination": "/index.html" }],
    "predeploy": ["npm run build"],
    "frameworksBackend": { "region": "us-central1" }
  },
  "firestore": {
    "rules": "firestore.rules",
    "indexes": "firestore.indexes.json"
  }
}
